<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/search_head_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dp_5" />


    <TextView
        android:id="@+id/search_nickName_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toRightOf="@id/search_head_img"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/dp_14" />


    <TextView
        android:id="@+id/search_sign_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/search_head_img"
        android:layout_alignLeft="@id/search_nickName_tv"
        android:layout_below="@id/search_nickName_tv"
        android:layout_toRightOf="@id/search_head_img"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/dp_14" />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/theme_bg" />


</RelativeLayout>